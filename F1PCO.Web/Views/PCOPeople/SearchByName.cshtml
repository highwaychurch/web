@model F1PCO.Web.ViewModels.PCOPeople.SearchByNameViewModel

<h2>People with names like '@Model.SearchTerm'</h2>
@using (Html.BeginForm())
{
    <fieldset>
        <legend>Search for a person in PCO by name</legend>
        <div class="control-group">
            <label class="control-label" for="focusedInput">Search term</label>
            <div class="controls">
                @Html.TextBoxFor(x => x.SearchTerm)
            </div>
        </div>
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Search</button>
            <button type="reset" class="btn">Clear</button>
        </div>
    </fieldset>
}
<table class="table table-striped">
    <thead>
        <tr>
            <th>F1ID</th>
            <th>First Name</th>
            <th>Last Name</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var person in Model.MatchingPeople)
    {
        <tr>
            <td>@person.PCOID</td>
            <td>@person.FirstName</td>
            <td>@person.LastName</td>
        </tr>
    }
    </tbody>
</table>
